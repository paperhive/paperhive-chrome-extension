{
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "version": "0.0.2",
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/background.js"
    ],
    "persistent": true
  },
  "page_action": {
    "default_icon": {
      "19": "images/icon-grey-19.png",
      "38": "images/icon-grey-38.png"
    },
    "default_title": "PaperHive",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["content.css"],
      "js": [
        "scripts/content.js"
      ]
    }
  ],
  "permissions": [
    "webRequest",
    "webNavigation",
    "activeTab",
    "*://*/*"
  ]
}
