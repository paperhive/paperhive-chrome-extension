{
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "version": "0.0.0",
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "images/icon-grey-19.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "webRequest",
    "activeTab",
    "*://*/*.pdf"
  ]
}
