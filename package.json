{
  "name": "paperhive-chrome-extension",
  "version": "0.2.0",
  "license": "GPL-3.0",
  "description": "Browser extension for PaperHive",
  "manifest_version": 2,
  "repository": {
    "type": "git",
    "url": "git@github.com:paperhive/paperhive-chrome-extension.git"
  },
  "scripts": {
    "lint": "npm run eslint && npm run htmlhint",
    "eslint": "./node_modules/.bin/eslint src/",
    "htmlhint": "./node_modules/.bin/htmlhint src/",
    "meta": "mkdir -p build && cp -r src/_locales/ src/manifest.json build/",
    "images": "mkdir -p build/images && cp src/images/*png build/images && optipng --quiet build/images/*png",
    "js": "./node_modules/.bin/webpack",
    "build": "npm run meta && npm run images && npm run js",
    "zip": "npm run build && zip -r paperhive.zip build/",
    "watch": "./node_modules/.bin/webpack --progress --colors --watch",
    "clean": "rm -rf build && rm -f paperhive.zip"
  },
  "dependencies": {
    "angular": "^1.4.9",
    "co": "4.6.0",
    "paperhive-sources": "1.0.0",
    "qs": "^6.0.2"
  },
  "devDependencies": {
    "browserify": "^12.0.1",
    "browserify-shim": "^3.8.11",
    "css-loader": "^0.23.1",
    "del": "^2.0.2",
    "eslint-config-airbnb": "^4.0.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "gulp": "^3.9.0",
    "gulp-eslint": "^1.1.0",
    "gulp-htmlhint": "^0.3.0",
    "gulp-htmlmin": "^1.2.0",
    "gulp-imagemin": "^2.4.0",
    "gulp-less": "^3.0.4",
    "gulp-minify-css": "^1.2.1",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-streamify": "^1.0.2",
    "gulp-uglify": "^1.4.2",
    "gulp-util": "^3.0.7",
    "gulp-zip": "^3.0.2",
    "html-loader": "^0.4.0",
    "imagemin-pngquant": "^4.2.0",
    "json-loader": "^0.5.4",
    "lodash": "^3.10.1",
    "merge-stream": "^1.0.0",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.6.0",
    "webpack": "^1.12.12"
  },
  "engines": {
    "node": ">=0.8.0"
  },
  "browser_": {
    "angular": "./bower_components/angular/angular.js",
    "jquery": "./bower_components/jquery/dist/jquery.js"
  },
  "browserify-shim_": {
    "angular": {
      "exports": "angular",
      "depends": [
        "jquery"
      ]
    }
  }
}
